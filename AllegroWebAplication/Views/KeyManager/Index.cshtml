@model IEnumerable<AllegroWebAplication.ViewModels.KeyManagerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddOrUpdate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ManagerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuctionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfKeys)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ManagerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuctionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfKeys)
        </td>
        <td>
            @Html.ActionLink("Manage keys", "ManageKeys", new { id = item.Id }) |
            @Html.ActionLink("Add multiple Keys", "AddKeysForManager", new { id = item.Id }) |
            @Html.ActionLink("Edit", "AddOrUpdate", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteManager", new { id=item.Id })
        </td>
    </tr>
}

</table>
