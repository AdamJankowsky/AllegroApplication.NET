@model IEnumerable<AllegroWebAplication.KeySenderModels.KeyManagerModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FactoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuctionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keys)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FactoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuctionID)
        </td>
        <td>
            @(item.Keys == null ? 0 : item.Keys.Count)
        </td>
        <td>
            @Html.ActionLink("Manage keys", "ManageKeys", new { id = item.Id }) |
            @Html.ActionLink("Add multiple Keys", "AddKeysForManager", new { id = item.Id }) |
            @Html.ActionLink("Edit", "AddOrUpdate", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
